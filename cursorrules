[General]
# スクロール中の不要な再計算を無効化
disableReflowOnCursorMove = true

# requestAnimationFrame使用でDOM更新最適化
useRequestAnimationFrame = true

# 非表示要素へのカーソルイベントを無視
ignoreHiddenElements = true

# IntersectionObserverで画面内のみ処理
useIntersectionObserver = true

# スクロール連動イベントのパッシブ化
passiveCursorListeners = true

[Rendering]
# ハードウェアアクセラレーションを利用
enableGPUAcceleration = true

# カーソルアニメーションの最適化
cursorAnimationFPS = 60
reduceMotionForPerf = true

# スタイル変更時のバッチ処理
batchStyleUpdates = true

# repaint/reflow最小化のための位置固定
cursorPositioning = "transform: translate3d"

# 頻繁にtransformを変更する要素にはwill-changeを適用
enableWillChangeForCursor = true

[Events]
# カーソルイベント処理のスロットリング (16ms ≈ 60fps)
throttleCursorEvents = 16

# イベントバブリングの制御
stopPropagationIfUnnecessary = true

# 大量ノード上でのhoverを無効
disableHoverOnManyNodes = true

[Advanced]
# 大規模DOMの際は軽量カーソル処理に切替
switchToLightModeDOMNodeCount = 1000

# 動的カーソル形状変更の制限
limitCursorStyleChanges = true
