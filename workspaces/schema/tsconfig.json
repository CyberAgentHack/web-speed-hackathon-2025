{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "exactOptionalPropertyTypes": false,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "paths": {
      "@wsh-2025/schema/*": ["./*"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ESNext"
  },
  "exclude": ["dist"],
  "include": ["**/*", "**/*.mjs", "../client/**/*"]
}
